---
import Layout from '../layouts/Layout.astro';

const projects = [
	{
		title: 'Fusion Platform',
		description: 'Fusion Platform is a comprehensive mobile application designed to streamline and enhance the operations of mobile workers. It provides a range of features to improve communication, task management, and productivity.',
		tags: ['Angular', 'Ionic', 'MongoDB'],
		link: 'https://www.psi-mobile.com',
		featured: true
	},
	{
		title: 'ngx-stripe',
		description: 'Angular library for Stripe.js and Stripe Elements. Seamlessly integrate Stripe payments into your Angular applications.',
		tags: ['Angular', 'Stripe'],
		link: 'https://ngx-stripe.dev',
		github: 'https://github.com/richnologies/ngx-stripe'
	}
];
---

<Layout title="Projects - Ricardo">
	<div class="projects">
		<h1>Featured Projects</h1>
		<div class="project-grid">
			{projects.map(project => (
				<div class="project-card">
					<div class="card-content">
						<h2>{project.title}</h2>
						<p>{project.description}</p>
						<div class="tags">
							{project.tags.map(tag => <span class="tag">{tag}</span>)}
						</div>
						<div class="card-actions">
							<a href={project.link} target="_blank" class="button primary">View Project</a>
							{project.github && (
								<a href={project.github} target="_blank" class="button github">
									<svg height="20" width="20" viewBox="0 0 16 16" fill="currentColor">
										<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
									</svg>
									GitHub
								</a>
							)}
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
</Layout>

<style>
	.projects {
		padding-top: 2rem;
	}
	h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: var(--text-primary);
		background: linear-gradient(to right, var(--accent), var(--accent-light));
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}
	.project-card {
		background: var(--card-bg);
		border-radius: 16px;
		overflow: hidden;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
	}
	.project-card:hover {
		transform: translateY(-4px);
		border-color: rgba(255, 87, 34, 0.4);
		box-shadow: 0 4px 20px rgba(255, 87, 34, 0.1);
	}
	.card-content {
		padding: 2rem;
	}
	h2 {
		color: var(--text-primary);
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}
	p {
		color: var(--text-secondary);
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}
	.tag {
		background: rgba(255, 87, 34, 0.1);
		color: var(--accent);
		padding: 0.25rem 0.75rem;
		border-radius: 9999px;
		font-size: 0.875rem;
		border: 1px solid rgba(255, 87, 34, 0.2);
	}
	.card-actions {
		display: flex;
		gap: 1rem;
	}
	.button {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.8rem 1.6rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
		flex: 1;
		justify-content: center;
		border: 1px solid transparent;
	}
	.button.primary {
		background: var(--accent);
		color: white;
	}
	.button.primary:hover {
		background: var(--accent-dark);
	}
	.button.github {
		background: transparent;
		color: var(--text-primary);
		border-color: rgba(255, 255, 255, 0.1);
	}
	.button.github:hover {
		background: rgba(255, 255, 255, 0.1);
	}
	@media (max-width: 768px) {
		.card-actions {
			flex-direction: column;
		}
	}
</style>